{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "trailingSlash": false,
    "rewrites": [
      {
        "regex": "/auth(/.*)?",
        "run": {
          "serviceId": "auth-service",
          "region": "europe-west1"
        }
      },
      {
        "regex": "/scan(/.*)?",
        "run": {
          "serviceId": "cyber-service",
          "region": "europe-west1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
